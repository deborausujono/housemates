<!DOCTYPE html>
<html>
<head>
  <title>Housemates</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
 
        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
 
        <!-- Be sure to leave the brand out there if you want it shown -->
        <%= link_to 'housemates', root_path, class: 'brand' %>
        <!--<a class="brand" href="#">housemates</a>-->
 
        <!-- Everything you want hidden at 940px or less, place within here -->
        <div class="nav-collapse collapse">
          <!-- .nav, .navbar-search, .navbar-form, etc -->
          <% if person_signed_in? %><!--render "shared/navbar"-->
            <ul class="nav">
              <li><%= link_to 'Home', '#' %></li>
              <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'My Houses', root_path %></li>
            </ul>
          
            <ul class="nav pull-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= gravatar_for current_person %>
                  <%= current_person.name %>
                  <b class="caret"></b>
                </a>

                <ul class="dropdown-menu">
                  <li><%= link_to 'Settings', edit_person_registration_path %></li>
                  <li><%= link_to 'Log Out', destroy_person_session_path, method: :delete %></li>
                </ul>
              </li>
            </ul>
          <% else %><!--render "welcome/navbar"-->
            <!--render "shared/sign_in_form", class: "navbar..."-->
            <%= form_for resource,
                         as: resource_name,
                         url: session_path(resource_name),
                         html: { class: "navbar-form pull-right" } do |f| %>
              
              <%= f.email_field :email, class: "span2", placeholder: "Email" %>

              <%= f.password_field :password, class: "span2", placeholder: "Password" %>

              <% if devise_mapping.rememberable? -%>
                <%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me %>
                  <div class="remember-me">Remember me</div>
                <% end %>
              <% end -%>

              <%= f.submit "Sign in", class: "btn" %>
            <% end %>
          <% end %>
        </div>
 
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <% if notice %><p class="notice"><%= notice %></p><% end %>
    <% if alert %><p class="alert"><%= alert %></p><% end %>

    <%= yield %>
  </div>

</body>
</html>
