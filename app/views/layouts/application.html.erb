<!DOCTYPE html>
<html>
<head>
  <title>Housemates</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
 
        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
 
        <!-- Be sure to leave the brand out there if you want it shown -->
        <%= link_to 'housemates', '#', class: 'brand' %>
        <!--<a class="brand" href="#">housemates</a>-->
 
        <!-- Everything you want hidden at 940px or less, place within here -->
        <div class="nav-collapse collapse">
          <!-- .nav, .navbar-search, .navbar-form, etc -->
          <ul class="nav">
            <li class="<%= 'active' if current_page?(houses_path) %>"><%= link_to 'Whiteboard', houses_path %></li>
            <li><%= link_to 'Chore Wheel', '#' %></li>
            <li><%= link_to 'Expenses', '#' %></li>
            <li><%= link_to 'Inventory', '#' %></li>
            <li><%= link_to 'Events', '#' %></li>
          </ul>

          <ul class="nav pull-right">
            <li class="divider-vertical"></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <% if person_signed_in? %>
                  <%= current_person.name %>
                <% else %>
                  Account
                <% end %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Settings', edit_person_registration_path %></li>
                <li><%= link_to 'Log Out', destroy_person_session_path %></li>
              </ul>
            </li>
          </ul>
        </div>
 
      </div>
    </div>
  </div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>

</body>
</html>
