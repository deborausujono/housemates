<p class="text-right" id="option-links">
  <%= link_to raw('<i class="icon-pencil" id="edit-note-link"></i>'),
              edit_note_path(note),
              remote: true %>
  <%= link_to raw('<i class="icon-remove"></i>'),
              '#confirm-delete', id: 'delete-link',
              data: { path: note.id, toggle: 'modal' } %>
</p>
<p id="option-links-filler"><br></p>
<p><%= note.text %></p>
<p class="text-right signature">
  <small><%= note.person.name %></small><br>
  <small><%= note.updated_at.strftime "%b %e, %Y at %l:%M%P" %></small>
</p>

<div class="modal hide fade" id="confirm-delete">
  <div class="modal-header">
    <h3>Confirm Delete</h3>
  </div>
  <div class="modal-body">
    <p>Are you sure you want to delete this?</p>
  </div>
  <div class="modal-footer">
    <%= link_to 'Delete', 'notes/path', method: :delete,
                class: 'btn btn-primary', id: 'delete-button' %>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>
