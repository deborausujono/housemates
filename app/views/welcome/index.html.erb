<div class="row-fluid">
  <div class="span8">
    <!--Body content-->
    <div class="row-fluid">
      <h1>Shared living made easy</h1>
      <p>Track shared expenses, manage chores, post notes, and schedule group events</p>
    </div>
  </div>
  <div class="span4">
    <!--Sidebar content, move to partial shared/sign_up_form-->
<%= form_for resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { class: "well" } do |f| %>
  <h2>Sign up</h2>

  <%= devise_error_messages! %>
              
  <%= f.text_field :name, class: "input-block-level", placeholder: "Full name" %>

  <%= f.email_field :email, class: "input-block-level", placeholder: "Email address" %>

  <%= f.password_field :password, class: "input-block-level", placeholder: "Password" %>

  <%= f.password_field :password_confirmation, class: "input-block-level", placeholder: "Confirm password" %>

  <%= f.label :public, class: "checkbox" do %>
    <%= f.check_box :public %> Make profile public
  <% end %>

  <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>

  <br><br><%= render "devise/shared/links" %>
<% end %>
  </div>
</div>
