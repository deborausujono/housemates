<div class="row-fluid">
  <div class="span8">
    <!--Body content-->
    <br>
    <div class="row-fluid welcome-text">
      <h1>We give you a blank board. Use it as your regular whiteboard.</h1>
      <br>
      <p class="lead"><i class="icon-file welcome-icon"></i> Add notes to your board</p>
      <p class="lead"><i class="icon-share-alt welcome-icon"></i> Share your board with friends, family, or anyone</p>
      <p class="lead"><i class="icon-th welcome-icon"></i> Easily manage multiple boards</p>
      <p class="lead"><i class="icon-lock welcome-icon"></i> Adjust privacy settings for each board</p>
    </div>
  </div>
  <div class="span4">
    <!--Sidebar content, move to partial shared/sign_up_form-->
<%= form_for resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { class: "well" } do |f| %>
  <h2>Sign up</h2>

  <%= devise_error_messages! %>
              
  <%= f.text_field :name, class: "input-block-level", placeholder: "Full name" %>

  <%= f.email_field :email, class: "input-block-level", placeholder: "Email address" %>

  <%= f.password_field :password, class: "input-block-level", placeholder: "Password" %>

  <%= f.password_field :password_confirmation, class: "input-block-level", placeholder: "Confirm password" %>

  <%= f.label :public, class: "checkbox" do %>
    <%= f.check_box :public %> Make profile public
  <% end %>

  <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>

  <br><br><%= render "devise/shared/links" %>
<% end %>
  </div>
</div>
